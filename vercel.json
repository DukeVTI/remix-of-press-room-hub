{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/blog/:slug/post/:id",
      "destination": "/api/share?type=post&slug=:slug&id=:id"
    },
    {
      "source": "/blog/:slug",
      "destination": "/api/share?type=blog&slug=:slug"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}